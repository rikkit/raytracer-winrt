<Page
    x:Class="IF.Ray.WinRT.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:IF.Ray.WinRT.Controls"
    mc:Ignorable="d"    
    d:DesignWidth="1366"
    d:DesignHeight="768">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <controls:Direct3DUserControl x:Name="D3DUserControl"
                                      Grid.Column="1"
                                      Width="600"
                                      Height="600"
                                      RenderTransformOrigin="0.5,0.5"/>

        <Border Grid.Column="0"
                Background="{StaticResource AppBarBackgroundThemeBrush}">
            <StackPanel Margin="20">
                <Slider x:Name="ScaleSlider"
                        Header="Scale"
                        Value="3"
                        Minimum="0.5"
                        Maximum="10"
                        Orientation="Horizontal"
                        ValueChanged="ScaleSlider_OnValueChanged"
                        StepFrequency="0.01"/>
                <Slider x:Name="RotationXSlider"
                        Header="X Rotation"
                        Value="0"
                        Minimum="-3.2"
                        Maximum="3.2"
                        Orientation="Horizontal"
                        ValueChanged="OnRotationSliderChanged"
                        StepFrequency="0.01"/>
                <Slider x:Name="RotationYSlider"
                        Header="Y Rotation"
                        Value="0"
                        Minimum="-3.2"
                        Maximum="3.2"
                        Orientation="Horizontal"
                        ValueChanged="OnRotationSliderChanged"
                        StepFrequency="0.01"/>
                <Slider x:Name="RotationZSlider"
                        Header="Z Rotation"
                        Value="0"
                        Minimum="-3.2"
                        Maximum="3.2"
                        Orientation="Horizontal"
                        ValueChanged="OnRotationSliderChanged"
                        StepFrequency="0.01"/>
                <!--<Slider x:Name="RotateSlider"
                        Header="Rotate"
                        Value="10"
                        Minimum="0"
                        Maximum="360"
                        ValueChanged="ScaleSlider_OnValueChanged"
                        StepFrequency="1"/>-->
            </StackPanel>
        </Border>
    </Grid>
</Page>
